<div id="login">
  <h2>Login</h2>
  <form action="/login" method="POST">
    <label>
      Username
      <input type="text" name="username" placeholder="Your username" />
    </label>

    <label>
      Password
      <input type="password" name="password" id="input-password" placeholder="********" />
    </label>

    <button>Login</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>